  <script>
    let lang = 'pt';
    const translations = {
      en: {
        'nav-home': 'Home',
        'nav-about': 'About',
        'nav-lessons': 'Lessons',
        'nav-portfolio': 'Portfolio',
        'nav-contact': 'Contact',
        'hero-title': 'Welcome to my musical world!',
        'hero-text': 'Pianist and Master Student in Interpretive Practices from UFRGS, I offer personalized piano lessons and emotional performances.',
        'hero-button': 'Book a Lesson',
        'about-title': 'About Me',
        'about-text': 'I am a pianist with a degree in Bachelor of Music from UFRGS, specializing in interpretive practices. I love teaching piano, music theory, and ear training, connecting students to music with emotion and technique.',
        'lessons-title': 'Piano Lessons',
        'lessons-text': 'I offer online and in-person lessons for all levels, including piano, music theory, and ear training. Personalized classes for beginners, intermediates, and advanced students.',
        'lessons-button': 'Learn More',
        'portfolio-title': 'Portfolio',
        'portfolio-text': 'Watch my performances, including pieces by Chopin, Beethoven, and Bach',
        'contact-title': 'Get in Touch',
        'contact-text': 'Interested in lessons or performances? Send me a message!',
        'contact-name': 'Name',
        'contact-email': 'Email',
        'contact-message': 'Message',
        'contact-button': 'Send',
        'footer-youtube': 'YouTube',
        'footer-instagram': 'Instagram',
        'footer-x': 'X',
        'language-toggle': 'Switch to Português'
      },
      pt: {
        'nav-home': 'Home',
        'nav-about': 'Sobre',
        'nav-lessons': 'Aulas',
        'nav-portfolio': 'Portfólio',
        'nav-contact': 'Contato',
        'hero-title': 'Bem-vindo ao Meu Mundo Musical',
        'hero-text': 'Pianista e mestranda em Práticas Interpretativas pela UFRGS, ofereço aulas de piano personalizadas e performances que emocionam.',
        'hero-button': 'Agende sua Aula',
        'about-title': 'Sobre Mim',
        'about-text': 'Sou pianista e professora de piano com formação no Bacharelado de Música pela UFRGS, em 2025 iniciei o Mestrado em Música/Práticas Interpretativas na mesma universidade. Considero a atividade pedagógica transformadora e busco transmitir aos alunos todo o conhecimento que venho adquirindo ao longo da minha formação. Aprender a tocar uma música que amamos é uma experiência maravilhosa que todos podem ter, meu objetivo é te guiar nesse processo para que você desenvolva técnica, expressão musical e uma relação saudável com o piano.',
        'lessons-title': 'Aulas de Piano',
        'lessons-text': 'Ofereço aulas online e presenciais para todos os níveis, incluindo piano, teoria musical e treinamento auditivo. Aulas personalizadas para iniciantes, intermediários e avançados.',
        'lessons-button': 'Saiba Mais',
        'portfolio-title': 'Portfólio',
        'portfolio-text': 'Assista às minhas performances, incluindo peças de Chopin, Beethoven e Bach',
        'contact-title': 'Entre em Contato',
        'contact-text': 'Interessado em aulas ou apresentações? Envie uma mensagem!',
        'contact-name': 'Nome',
        'contact-email': 'E-mail',
        'contact-message': 'Mensagem',
        'contact-button': 'Enviar',
        'footer-youtube': 'YouTube',
        'footer-instagram': 'Instagram',
        'footer-x': 'X',
        'language-toggle': 'Switch to English'
      }
    };

    document.getElementById('language-toggle').addEventListener('click', () => {
      lang = lang === 'en' ? 'pt' : 'en';
      document.getElementById('body').setAttribute('lang', lang);
      document.querySelector('title').textContent = lang === 'en' ? 'Poliana Lima - Pianist and Piano Teacher' : 'Poliana Lima - Pianista e Professora de Piano';
      document.querySelector('meta[name="description"]').setAttribute('content', lang === 'en' ? 'Online and in-person piano lessons with a pianist graduated in Bachelor of Music from UFRGS. Explore my work and book a lesson!' : 'Aulas de piano online e presenciais com pianista formada no Bacharelado em Música pela UFRGS. Conheça meu trabalho e agende sua aula!');
      
      for (let key in translations[lang]) {
        const elements = document.querySelectorAll(`#${key}`);
        elements.forEach(el => el.textContent = translations[lang][key]);
      }
    });

    // Inicializa o sintetizador do Tone.js
    const synth = new Tone.Sampler({
      urls: {
        "C4": "C4.mp3",
        "D#4": "Ds4.mp3", 
        "F#4": "Fs4.mp3",
      },
      baseUrl: "https://tonejs.github.io/audio/salamander/",
    }).toDestination();

    // Configuração das notas e seus offsets
    const whiteKeyWidth = 40;
    const blackKeyWidth = 20;
    const noteNames = ["C", "C#", "D", "D#", "E", "F", "F#", "G", "G#", "A", "A#", "B"];
    const notes = [];
    let whiteKeyIndex = 0;

    // Adiciona A0, A#0, B0
    notes.push({ note: "A0", type: "white", offset: whiteKeyIndex * whiteKeyWidth });
    whiteKeyIndex++;
    notes.push({ note: "A#0", type: "black", offset: whiteKeyIndex * whiteKeyWidth - blackKeyWidth / 2 });
    notes.push({ note: "B0", type: "white", offset: whiteKeyIndex * whiteKeyWidth });
    whiteKeyIndex++;

    // Adiciona oitavas completas de C1 a B7
    for (let octave = 1; octave <= 7; octave++) {
      noteNames.forEach((note) => {
        const isBlack = note.includes("#");
        const offset = isBlack ? whiteKeyIndex * whiteKeyWidth - blackKeyWidth / 2 : whiteKeyIndex * whiteKeyWidth;
        notes.push({ note: note + octave, type: isBlack ? "black" : "white", offset });
        if (!isBlack) whiteKeyIndex++;
      });
    }

    // Adiciona C8
    notes.push({ note: "C8", type: "white", offset: whiteKeyIndex * whiteKeyWidth });

    // Cria as teclas dinamicamente
    const piano = document.getElementById("piano");
    notes.forEach(({ note, type, offset }) => {
      const key = document.createElement("div");
      key.className = type === "white" ? "white-key" : "black-key";
      if (type === "black") key.style.left = `${offset}px`;
      key.addEventListener("click", () => {
        synth.triggerAttackRelease(note, 1);
      });
      piano.appendChild(key);
    });
  </script>
</body>
